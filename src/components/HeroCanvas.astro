<canvas id="color-canvas" width="32" height="32"></canvas>

<style>
  canvas {
    --rotation: 240deg;
    --splitPercent: 30%;

    width: 100%;
    height: 100%;

    opacity: 0.25;

    pointer-events: none;

    mask-image: linear-gradient(
      var(--rotation),
      transparent var(--splitPercent),
      hsl(0, 0%, 0%, 0.8)
    );
    -webkit-mask-image: linear-gradient(
      var(--rotation),
      transparent var(--splitPercent),
      hsl(0, 0%, 0%, 0.8)
    );
  }
</style>

<script>
  // Get the canvas element and its 2D context
  const canvas = document.getElementById("color-canvas") as HTMLCanvasElement;
  const ctx = canvas.getContext("2d");

  // Set the color of a pixel at (x, y) with RGB values (r, g, b)
  const setColor = function (x, y, r, g, b) {
    ctx.fillStyle = `rgb(${r},${g},${b})`;
    ctx.fillRect(x, y, 1, 1);
  };

  // Calculate the red component of the color for a pixel at (x, y) at time t
  const calculateRed = function (x, y, t) {
    return Math.floor(192 + 64 * Math.cos((x * x - y * y) / 300 + t));
  };

  // Calculate the green component of the color for a pixel at (x, y) at time t
  const calculateGreen = function (x, y, t) {
    return Math.floor(
      192 +
        64 * Math.sin((x * x * Math.cos(t / 4) + y * y * Math.sin(t / 3)) / 300)
    );
  };

  // Calculate the blue component of the color for a pixel at (x, y) at time t
  const calculateBlue = function (x, y, t) {
    return Math.floor(
      192 +
        64 *
          Math.sin(
            5 * Math.sin(t / 9) +
              ((x - 100) * (x - 100) + (y - 100) * (y - 100)) / 1100
          )
    );
  };

  let time = 0;

  // Main animation loop
  const animate = function () {
    for (let x = 0; x <= 35; x++) {
      for (let y = 0; y <= 35; y++) {
        setColor(
          x,
          y,
          calculateRed(x, y, time),
          calculateGreen(x, y, time),
          calculateBlue(x, y, time)
        );
      }
    }
    time += 0.015;
    window.requestAnimationFrame(animate);
  };

  // Start the animation
  animate();
</script>
